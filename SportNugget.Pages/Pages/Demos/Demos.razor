@page "/demos"
@using SportNugget.Components.Demos
@using SportNugget.Components.Shared
@inherits PageBase

<h3>@TestText</h3>
<Loader IsLoading="IsLoading">
    <Test Items="@TestData" Context="tdc">
        <TableHeader>
            <th>Id</th>
            <th>Name</th>
        </TableHeader>
        <RowTemplate>
            <td>@tdc.Id</td>
            <td>@tdc.Name</td>
        </RowTemplate>
        <FooterContent>
            <h2>Footer</h2>
            <Component1></Component1>
        </FooterContent>
    </Test>
</Loader>
<br />
<div>
    <h3>Session: </h3>
    <h3>Test State: @TestState.TestText</h3>
    <input @bind="TestText"/>
    <button @onclick="OnTestStateChangeButtonClick">Change</button>
</div>