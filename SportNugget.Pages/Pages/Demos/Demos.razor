@page "/demos"
@using SportNugget.Components.Demos
@using SportNugget.Components.Shared
@inherits PageBase
@attribute [Authorize]

<h3>@TestText</h3>
<Loader IsLoading="IsLoading">
    <Test Items="@TestData" Context="tdc">
        <TableHeader>
            <th>Id</th>
            <th>Name</th>
        </TableHeader>
        <RowTemplate>
            <td>@tdc.Id</td>
            <td>@tdc.Name</td>
        </RowTemplate>
        <FooterContent>
            <h2>Footer</h2>
            <Component1></Component1>
        </FooterContent>
    </Test>
</Loader>
<br />
<div>
    <h3>Session: </h3>
    <h3>Test State: @TestState.TestText</h3>
    <input @bind="TestText"/>
    <button @onclick="OnTestStateChangeButtonClick">Change</button>
    <hr />
    <h3>Culture: @CurrentCulture.DisplayName</h3>
    <p>Test 1: @ContentResourceProvider.GetResource(ContentResource.Test1)</p>
    <br />
    <p>Test 2: @ContentResourceProvider.GetResource(ContentResource.Test2)</p>
</div>