@typeparam T

<h3>Test 
    @if (IsLoading)
    {
        <h3>is loading...</h3>
    }
</h3>

<table class="table">
    <thead>
        <tr>@TableHeader</tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            if (RowTemplate is not null)
            {
                <tr>@RowTemplate(item)</tr>
            }
            else
            {
                <tr>@item</tr>
            }
        }
    </tbody>
    <tfoot>
        @FooterContent
    </tfoot>
</table>